@{
    @model ExpenseTracker.Models.Forms.LoginForm
}

<form asp-action="Test_func" asp-controller="Home" method="post">
    <div class="form-group">
        <label asp-for="password" class="control-label"></label>
        <input asp-for="password" class="form-control" />
        <span asp-validation-for="password" class="text-danger"></span>
    </div>
    <hr />
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Log in</button>
    </div>
</form>

<div class="d-flex justify-content-center align-items-center flex-column" style="height: 60vh;">
    <h1>Test Page</h1>
    <input type="submit" value="Button" class="btn btn-primary mt-3" onclick="test_function()" />
</div>


@section scripts {
    <script>
        async function test_function() {
            const response = await fetch('/Home/Test_func');
            const data = await response.json();
            console.log("Fetched users:", data);
        }
    </script>
}